<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_input">
        <item name="android:background">@drawable/bg_ed_txt_bord</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <dimen name="layout_height_btn_toolbar">
        <item name="android:layout_height">55dp</item>
    </dimen>

    <style name="login_btn" parent="login_input">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_login_btn</item>
        <item name="android:stateListAnimator">@animator/login_btn_animator</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>